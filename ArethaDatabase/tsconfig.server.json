{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ES6",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": [
            "es2017"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}